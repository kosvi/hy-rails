<div id="<%= dom_id brewery %>">
  <h2>
    <%= brewery.name %>
    <% unless brewery.active %>
      <span class="badge bg-secondary">retired</span>
    <% end %>
  </h2>

  <p>
    <i>Established at 
    <%= brewery.year %>
    </i>
  </p>

  <p>
    Beers count: <%= brewery.beers.count %>
  </p>

  <h3>Beers</h3>
  <div>
    <table class="table table-striped table-hover">
       <thead>
        <tr>
          <th>Name</th>
          <th>Style</th>
          <th>Rating</th>
        </tr>
      </thead>
      <tbody>
        <% brewery.beers.each do |beer| %>
          <tr>
            <td><%= link_to beer.name, beer %></td>
            <td><%= link_to beer.style.name, beer.style %></td>
            <td><%= beer.average_rating %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <p>
    <% if brewery.ratings.empty? %>
      Brewery has no ratings yet!
    <% else %>
      Brewery has <%= "#{pluralize(brewery.ratings.count, 'rating')}" %>  with an average of <%= brewery.average_rating %>
    <% end %>
  </p>

</div>
