<h2>Best <%= type.pluralize %></h2>
<div>
  <table class="table table-hover">
    <thead>
      <th><%= type %></th>
      <th>Average</th>
    </thead>
    <tbody>
      <% top.each do |t| %>
        <tr>
          <td><%= t.name %></td>
          <td><%= t.average_rating %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
