<h1>New membership</h1>

<%= form_for(@membership) do |f| %>
  <% if @membership.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@membership.errors.count, "error") %> prohibited membership being created:</h2>
      <ul>
      <% @membership.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.label :beer_club_id, "Select a club:", class: "form-label" %>
  <%= f.select :beer_club_id, options_from_collection_for_select(@beer_clubs, :id, :to_s), {}, { :class => "form-select" } %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>

<br>

<div>
  <%= link_to "Back to memberships", memberships_path %>
</div>
